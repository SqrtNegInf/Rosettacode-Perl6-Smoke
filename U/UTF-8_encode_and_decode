#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/UTF-8_encode_and_decode
#c# 2017-03-06 <RC
#m# MOAR: OK
#j#  JVM: OK

# Pretty much all built in to the language.

say sprintf("%-18s %-34s %7s %7s\t%s  %s\n", 'Character', 'Name', 'Ordinal', 'Unicode', 'UTF-8 encoded', 'decoded'), '-' x 94;

my @res;
for < A √∂ –ñ ‚Ç¨ ùÑû üòú > -> $char {
    @res.push: sprintf "   %-7s %-43s %6s U+%04s\t%12s %4s", $char, $char.uniname, $char.ord,
      $char.ord.base(16), $char.encode('UTF8').list¬ª.base(16).Str, $char.encode('UTF8').decode;
}
.say for @res;

#Character          Name                               Ordinal Unicode	UTF-8 encoded  decoded
#----------------------------------------------------------------------------------------------
my $moar = qq:to/END/;
   A       LATIN CAPITAL LETTER A                          65 U+0041	          41    A
   √∂       LATIN SMALL LETTER O WITH DIAERESIS            246 U+00F6	       C3 B6    √∂
   –ñ       CYRILLIC CAPITAL LETTER ZHE                   1046 U+0416	       D0 96    –ñ
   ‚Ç¨       EURO SIGN                                     8364 U+20AC	    E2 82 AC    ‚Ç¨
   ùÑû       MUSICAL SYMBOL G CLEF                       119070 U+1D11E	 F0 9D 84 9E    ùÑû
   üòú       FACE WITH STUCK-OUT TONGUE AND WINKING EYE  128540 U+1F61C	 F0 9F 98 9C    üòú
END

my $jvm = qq:to/END/;
   A       LATIN CAPITAL LETTER A                          65 U+0041	          41    A
   √∂       LATIN SMALL LETTER O WITH DIAERESIS            246 U+00F6	       C3 B6    √∂
   –ñ       CYRILLIC CAPITAL LETTER ZHE                   1046 U+0416	       D0 96    –ñ
   ‚Ç¨       EURO SIGN                                     8364 U+20AC	    E2 82 AC    ‚Ç¨
   ùÑû      MUSICAL SYMBOL G CLEF                       119070 U+1D11E	 F0 9D 84 9E   ùÑû
   üòú      FACE WITH STUCK-OUT TONGUE AND WINKING EYE  128540 U+1F61C	 F0 9F 98 9C   üòú
END

use Test;
my $ref = $*VM ~~ /jvm/ ?? $jvm !! $moar;
is @res.join("\n"), chomp $ref;
