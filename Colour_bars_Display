#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Colour_bars/Display
#c# 2016-05-15 <RC, 2017-06-04 >RC
#t# graphical
#m# MOAR: OK
#j#  JVM: OK
#f# RC file: colorbars.ppm

# Works with: Rakudo version 2015.12
my $HOR = 1280;
my $VERT = 720;
 
my @colors = map -> $r, $g, $b { Buf.new: |(($r, $g, $b) xx $HOR div 8) },
                  0,  0,  0,
                255,  0,  0,
                  0,255,  0,
                  0,  0,255,
                255,  0,255,
                  0,255,255,
                255,255,  0,
                255,255,255;
 
my $PPM = open "run/colorbars.ppm", :w or die "Can't create colorbars.ppm: $!"; # DH change
 
$PPM.print: qq:to/EOH/;
    P6
    # colorbars.ppm
    $HOR $VERT
    255
    EOH
 
for ^$VERT -> $v {
    for ^@colors -> $h {
        $PPM.write: @colors[$h];
    }
}
 
$PPM.close;
