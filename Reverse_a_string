#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Reverse_a_string
#c# 2015-11-22 <>RC, 2018-09-08 <RC
#m# MOAR: OK
#j# JVM:  OK

my @res;

# Works with: rakudo version 2018.08

#Perl 6 handles graphemes, multi-byte characters and emoji correctly by default.

@res.push: "hello world".flip;
@res.push: "as⃝df̅".flip;
@res.push: 'ℵΑΩ 駱駝道 🤔 🇸🇧 🇺🇸 🇬🇧‍ 👨‍👩‍👧‍👦🆗🗺'.flip;

.say for @res;

my $ref = q:to/END/;
dlrow olleh
f̅ds⃝a
🗺🆗👨‍👩‍👧‍👦 🇬🇧‍ 🇺🇸 🇸🇧 🤔 道駝駱 ΩΑℵ
END

use Test;
is @res.join("\n"), chomp $ref;
