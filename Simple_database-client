./client.p6 add 2016 '{"date":"2016-11-13","constructor":"Honda","name":"Marc M치rquez"}'
./client.p6 add 2017 '{"date":"2017-11-12","constructor":"Honda","name":"Marc M치rquez"}'

./client.p6 reportlast
