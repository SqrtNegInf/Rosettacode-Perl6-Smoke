#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Order_two_numerical_lists
#c# 2016-01-22 <>RC
#m# MOAR: OK
#j#  JVM: OK
#n# 2020-10-07 now stable?

# This is already a built-in comparison operator.

srand 123456;

my @a = <1 2 4>;
my @b = <1 2 4>;
my @res.push: @a ~ " before " ~ @b ~ " = " ~ ~(@a before @b);

@a = <1 2 4>;
@b = <1 2>;
@res.push: @a ~ " before " ~ @b ~ " = " ~ ~(@a before @b);

@a = <1 2>;
@b = <1 2 4>;
@res.push: @a ~ " before " ~ @b ~ " = " ~ ~(@a before @b);

for 1..10 {
    my @a = flat (^100).roll((2..3).pick);
    my @b = flat @a.map: { Bool.pick ?? $_ !! (^100).roll((0..2).pick) }
    @res.push: @a ~ " before " ~ @b ~ " = " ~ ~(@a before @b);
}

.say for @res;

my $moar = qq:to/END/;
1 2 4 before 1 2 4 = False
1 2 4 before 1 2 = False
1 2 before 1 2 4 = True
62 85 before 62 34 21 = False
44 97 before 13 22 23 79 = False
85 53 before 73 77 35 45 = False
91 98 before 50 82 85 52 = False
2 29 before 85 = True
59 4 55 before 73 85 64 28 41 = True
71 24 before 71 24 = False
17 18 66 before 17 18 66 = False
94 15 before 98 16 15 = True
48 35 64 before 60 79 47 64 = True
END

my $xoar = qq:to/END/;
1 2 4 before 1 2 4 = False
1 2 4 before 1 2 = False
1 2 before 1 2 4 = True
13 47 before 13 61 = True
93 62 before 93 = False
28 14 40 before 21 14 97 5 = False
13 22 before 13 22 = False
95 85 53 before 73 77 35 45 91 98 = False
94 50 before 85 52 = False
82 10 before 56 9 10 = False
55 18 47 before 14 18 = False
41 32 before 41 32 = False
82 27 before 82 27 = False
END

my $jvm = qq:to/END/;
1 2 4 before 1 2 4 = False
1 2 4 before 1 2 = False
1 2 before 1 2 4 = True
19 65 56 before 19 27 56 = False
83 8 5 before 83 = False
34 10 before 57 = True
22 24 50 before 73 88 = True
99 59 before 99 59 = False
2 47 71 before 2 39 48 71 = False
98 92 33 before 92 33 = False
55 22 77 before 22 77 = False
97 32 before 59 8 32 = False
93 50 before 93 = False
END

use Test;
if $*VM ~~ /jvm/ {
is @res.join("\n"), chomp $jvm;
} else {
is @res.join("\n"), chomp $moar;
}
