#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Loops/Break
#c# 2015-11-23 <RC
#m# MOAR: OK
#j#  JVM: OK

srand 123456;

my @res;

loop {
    @res.push: my $n = (0..19).pick;
    last if $n == 10;
    @res.push: (0..19).pick;
}

.say for @res;

my $moar = qq:to/END/;
18
16
12
12
9
17
5
15
4
17
8
6
7
12
2
17
14
18
16
14
18
14
11
9
16
7
2
15
3
12
2
14
7
12
7
15
10
END

my $jvm = qq:to/END/;
7
14
10
END

use Test;
if $*VM ~~ /jvm/ {
is @res.join("\n"), chomp $jvm;
} else {
is @res.join("\n"), chomp $moar;
}
