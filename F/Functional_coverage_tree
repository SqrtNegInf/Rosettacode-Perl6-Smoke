            cellars             |        |1         |
            wine_cellar         |        |1         |
            cinema              |        |0.75      |
END

say .[0] for walktree($data);

sub walktree ($data) {
    my @parts;
    while ( $data ~~ m:global/ ((\s*) \S .* \n)([$1 .*\n]*)/) {
        my ($head, $body, $w, $wsum) = ($0, $2, 0, 0);
say $/; exit;

say $head; say $body; exit;

        $head ~~ /^.*? \| (\S*) \s*\| (\S*) \s*\|/;

        my $weight   = $0.fmt('%-8s')  || 1;
        my $coverage = $1.fmt('%-10s') || 0;

        $w += .[1], $wsum += .[1] * .[2], $head ~= .[0] for walktree( $body );

        $coverage = sprintf '%-10.8g', $wsum/$w unless $w == 0;

        @parts.push: [ $head.subst(/\|.*/, "|{$weight}|{$coverage}|"), $weight, $coverage ];
    }
    @parts;
}

