#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Find_limit_of_recursion
#c# 2016-01-04 <>RC
#m# MOAR: OK
#j#  JVM: OK
#n# MOAR will go to 10 million, but why belabor the point...

# Maximum recursion depth is memory dependent. 

my $max = $*VM ~~ /jvm/ ?? 535 !! 1_000_000;

my $x = 0;
recurse;

sub recurse () {
   ++$x;
   say $x if $x %% $max;
   return if $x %% $max;
   recurse;
}

use Test;
is $x, $max;
