#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/xxx
#c# 2019-02-24 NOT ON rosettacode
#m# MOAR: OK
#j#  JVM: BROKEN
#n# calculate Ramanujan's number as per http://oeis.org/wiki/Ramanujan%27s_constant
#n# cobbled together from other RC tasks (calculation of 𝑒 and π) and a custom ** operator
#n# 'almost integer' of Heegner series (19 43 67 163), make table of deltas, a good RC task?
#n# https://oeis.org/A003173, https://en.wikipedia.org/wiki/Heegner_number

my @res;

use Rat::Precise; # thundergnat++

# degree of precision - does double-duty as number-of-decimals (π) and terms in Taylor series (𝑒)
constant D = 35; 

# exponentiation where base and exponent are both FatRat
multi infix:<**> (FatRat $base, FatRat $exp where * >= 1 --> FatRat) {
    2 R** $base**($exp/2);
}

multi infix:<**> (FatRat $base, FatRat $exp where * <  1 --> FatRat) {
    constant ε = 10**-D;
    my $low  = 0.FatRat;
    my $high = 1.FatRat;
    my $mid  = $high / 2;
    my $acc  = my $sqr = sqrt($base);

    while (abs($mid - $exp) > ε) {
      $sqr = sqrt($sqr);
      if ($mid <= $exp) { $low  = $mid; $acc *=   $sqr } 
      else              { $high = $mid; $acc *= 1/$sqr }
      $mid = ($low + $high) / 2;
    }

    $acc;
}

# from: http://rosettacode.org/wiki/Arithmetic-geometric_mean/Calculate_Pi (sqrt routines also)
sub π (--> FatRat) {
    my ($a, $n) = 1, 1;
    my $g = sqrt 1/2.FatRat;
    my $z = .25;
    my $pi;

    for ^5 {
        given [ ($a + $g)/2, sqrt $a * $g ] {
            $z -= (.[0] - $a)**2 * $n;
            $n += $n;
            ($a, $g) = @$_;
            $pi = ($a ** 2 / $z).substr: 0, 2 + D;
        }
    }

    $pi.FatRat;
}

multi sqrt(Int $n) {
    .[*-1] given 1, { ($_ + $n div $_) div 2 } ... * == *
}

multi sqrt(FatRat $r --> FatRat) {
    FatRat.new: sqrt($r.nude[0] * 10**(D*2) div $r.nude[1]), 10**D;
}

# from: http://rosettacode.org/wiki/Calculating_the_value_of_e
sub postfix:<!> (Int $n) { (constant f = 1, |[\*] 1..*)[$n] }

sub 𝑒 (--> FatRat) { sum map { FatRat.new(1,.!) }, ^D }

# cover func for FatRat sqrt
sub prefix:<√> (Int $n) {
    sqrt($n.FatRat);
}

sub delta ($fw,$d,$exact,$almost) {
    join "\n", gather {
        fmt($exact);
        fmt($almost.precise($d));
        fmt(($exact-$almost).precise($d));
        sub fmt ($s) { take ' 'x(($fw-$d-1)-($s.split(/\./)[0]).chars) ~ $s }
    }
}

# calculate Ramanujan's number
my $d = 14;
my \Ramanujan = 𝑒() ** ( π() * √ 163 );
say "Ramanujan's constant";
say Ramanujan.precise($d), "\n";

# Heegner #'s and corresponding values to generate integers which expression 'almost' generates
say "Heegner numbers yielding 'almost' intgers";
for 19, 96, 43, 960, 67, 5280, 163, 640320 -> $heegner, $x {
    my $almost = 𝑒() ** ( π() * √ $heegner );
    my $exact  = $x**3 + 744;
    #say delta(33,$d,$exact,$almost), "\n"; 
    @res.push: delta(33,$d,$exact,$almost);
}

say my $result = join "\n", @res;

my $ref = qq:to/END/;
            885480
            885479.7776801543195
                 0.2223198456805
         884736744
         884736743.99977746603491
                 0.00022253396509
      147197952744
      147197952743.99999866245422
                 0.00000133754578
262537412640768744
262537412640768743.99999999999925
                 0.00000000000075
END

use Test;
is $result, chomp $ref;
