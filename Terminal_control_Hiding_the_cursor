#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Terminal_control/Hiding_the_cursor
#t# interactive
#c# 2018-03-24 <RC
#m# MOAR: BROKEN
#j# JVM:  BROKEN
#n# both ways fail, bad just on Mac OS?

say 'Hiding the cursor for 5 seconds...';

shell "tput civis";
sleep 5;
shell "tput cvvis";

