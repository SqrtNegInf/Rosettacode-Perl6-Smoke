#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Date_format
#c# 2016-11-08 <>RC
#m# MOAR: OK
#j#  JVM: OK
#n# 'slurp-rest' deprecated, plain 'slurp' works fine

use DateTime::Format;

my $dt1 = DateTime.now;

say strftime('%Y-%m-%d', $dt1);
say strftime('%A, %B %d, %Y', $dt1);

use DateTime::Format;

my $dt2 = DateTime.now;

say $dt2.yyyy-mm-dd;
say strftime('%A, %B %d, %Y', $dt2);

my $proc = run 'date', '+%Y-%m-%d', :out; 
my $today = $proc.out.slurp;

use Test;
is strftime('%Y-%m-%d', $dt1), chomp $today;
is $dt2.yyyy-mm-dd, chomp $today;
