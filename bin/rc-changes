#!/usr/local/bin/perl
## recent Perl 6 updates on RosettaCode
#c# 2016-02-07 2016-02-08 2016-02-09 2016-03-15 2018-01-30 2018-04-27 2018-04-30 2018-05-01 2018-05-31 2018-08-09

open RC, qq{/opt/local/bin/curl --netrc -s 'http://rosettacode.org/mw/index.php?title=Special:RecentChanges&days=7&from=&limit=500&namespace=0' |};

$cnt = 0;
$new = 'N';

while (<RC>) {
    next unless /Perl/i;
    #next unless /Perl|SqrtNegInf/i; # now must authenticate, so my login is on every line...

    ($user)  = m#Special:Contributions/(.*?)"#;
    next if $user =~ /Robbie|CraigD/i; # users known to be adding non-Perl6 code...

    if (/mw-changeslist-title/) {
     ($title) = /mw-changeslist-title">(.*?)</;
    } else {
     ($title) = /index.php.title=(.*?)&/;
    }
    $title =~ s/_/ /g;

    ($date) = m#<h4>(\d+ \S+) 20\d\d</h4># if m/<h4>/;
    ($time) = m/[;>](\d\d:\d\d)[&<]/;

    $line = sprintf "%5s %-15s %-15s %s\n", $time, $date, $user, $title; # the slug

    if (0 == $cnt) {
        $file = "$ENV{HOME}/perl6/Rosetta-Code/meta/RC-recent.txt";
        open F, "<$file"; $checkpt = <F>; close F;  # read old check-point
        exit if $line eq $checkpt;                  # no changes, bail
        open F, ">$file"; print F $line; close F;   # save new check-point
    } 

    $new = ' ' if $line eq $checkpt;    # stop marking as 'new'
    print "$new $line";
    last if 30 < $cnt++;                # just show recent updates
}
