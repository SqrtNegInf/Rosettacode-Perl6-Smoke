#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/XML/Input
#c# 2016-05-18 <RC, 2018-03-13 >RC
#m# MOAR: OK
#j#  JVM: BROKEN
#n# 2019-04-23 updated XML, and now HTML entity is *not* converted on output

use XML;
 
my $xml = from-xml '<Students>
  <Teacher Name="Severus" Gender="M" DateOfBirth="1940-01-01" />
  <Student Name="April" Gender="F" DateOfBirth="1989-01-02" />
  <Student Name="Bob" Gender="M"  DateOfBirth="1990-03-04" />
  <Student Name="Chad" Gender="M"  DateOfBirth="1991-05-06" />
  <Student Name="Dave" Gender="M"  DateOfBirth="1992-07-08">
    <Pet Type="dog" Name="Rover" />
  </Student>
  <Student DateOfBirth="1993-09-10" Gender="F" Name="&#x00C9;mily" />
</Students>';

my @res.push: .<Name> for $xml.nodes.grep(/Student/);
.say for @res; 

my $ref = qq:to/END/;
April
Bob
Chad
Dave
&#x00C9;mily
END
#Ã‰mily

use Test;
is @res.join("\n"), chomp $ref;
