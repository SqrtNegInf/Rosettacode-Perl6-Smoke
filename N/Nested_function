sub make-List ($separator = ') '){
    my $count = 1;
 
    sub make-Item ($item) { "{$count++}$separator$item" }
 
    join "\n", <first second third>Â».&make-Item;
}
 
put my $result = make-List('. ');

my $ref = qq:to/END/;
1. first
2. second
3. third
END

use Test;
is $result, chomp $ref;
