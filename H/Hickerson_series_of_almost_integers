# Works with: rakudo version 2015-09-13
# We'll use FatRat values, and a series for an approximation of ln(2).

constant ln2 = [+] (1/2.FatRat, */2 ... *) Z/ 1 .. 100;
constant h = [\Ã—] 1/2, |(1..*) X/ ln2;

my @res;
for h[1..17] {
   @res.push: .round(0.001)
}
.say for @res;

my $ref = qq:to/END/;
