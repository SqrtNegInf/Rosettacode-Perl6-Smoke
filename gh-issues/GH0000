#!/usr/bin/env perl6
#t# skiptest
#u# not submitted
#c# 2016-08-23 first noticed this...
#n# bug source: P/Pentagram.1
#n# how many ways to 'say', some buffered, some not?
#n# 2016-11-25 - buffering not issue now, but <'b'.say(:$out)> goes to STDOUT, with no compiler warning
#n# (this is not has not work at least since the release of 6.c)
#n# https://gist.github.com/SqrtNegInf/cfc1bf33d67365ef2bbc512c8a6d0772

say 'stdout:';
say(1);
say 2;
3.say;
say '';

say '"b" should not be here:';
my $out = open('test.txt', :w);
$out.say: 'a';
'b'.say(:$out);  # ???
$out.say('c');
close $out;

say '';
say 'lines in file:';
run('wc', '-l', 'test.txt');
say 'content of file:';
run('cat', 'test.txt');

print "\n";
