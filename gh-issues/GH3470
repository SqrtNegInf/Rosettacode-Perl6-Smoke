#`{{
for 1..31 -> $n {
    #my $x = (^(2**$n)).pick for 1..161;   # good
    if ($n < 31) {
        my $x = (^(2**$n)).pick for 1..162;   # bad
    } else {
        my $y = (^(2**$n)).pick for 1..1;   # bad, even 1 more .pick blows up
    }
}
exit;
}}

my $vv = 2;
for (1..31) {
    #my $x = (^$vv).pick for 1..161;   # good
    my $x = (^$vv).pick for 1..162;   # bad
    $vv +<= 1
}

