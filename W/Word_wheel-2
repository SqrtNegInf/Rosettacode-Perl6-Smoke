#!/usr/bin/env raku
#u# http://rosettacode.org/wiki/Word_wheel
#t# skiptest
#c# 2020-07-04 <RC
#m# MOAR: OK
#j# JVM:  BROKEN

my @res;

use Terminal::Boxer;

my %*SUB-MAIN-OPTS = :named-anywhere;

unit sub MAIN ($wheel = 'ndeokgelw', :$dict = 'ref/unixdict.txt', :$min = 3);

my $must-have = $wheel.comb[4].lc;

my $has = $wheel.comb».lc.Bag;

my %words;
$dict.IO.slurp.words».lc.map: {
    next if not .contains($must-have) or .chars < $min;
    %words{.chars}.push: $_ if .comb.Bag ⊆ $has;
};

say "Using $dict, minimum $min letters.";

print rs-box :3col, :3cell, :indent("\t"), $wheel.comb».uc;

printf "%d letters:  %s\n", .key, .value.sort.join(', ') for %words.sort;

.say for @res;

my $ref = q:to/END/;
END

use Test;
#is @res.join("\n"), chomp $ref;
