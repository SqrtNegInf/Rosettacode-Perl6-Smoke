#!/usr/bin/env perl6
## xxx
#  David H.  2019-11-24

my $str = '2   100   90   4   1000000';

my $groups = '\d**4 | \d**7 | \d**10 | \d**13';
#my $groups = rx/ \d**4 | \d**7 | \d**10 | \d**13/;

my token grp { \d**4 | \d**7 | \d**10 | \d**13 };

$str ~~ s:g/ <|w> (\d) \s+ '100' \s+ (\d\d) \s+ (\d) \s+ (<grp>) <|w>/{($0 * 100 + $1 + $2) * $3}/;
say $str;
