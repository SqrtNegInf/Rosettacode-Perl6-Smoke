#sub MAIN ($filename, $beg, $len) {
    my $filename = 'run/calendar-2016.txt'; 
    my $beg = 3;
    my $len = 8;

    qqx[/usr/bin/cal 2016 > $filename];
    my @lines = split /^^/, slurp $filename;
    unlink $filename;
    splice(@lines,$beg,$len) == $len or warn "Too few lines";
    spurt $filename, @lines;
