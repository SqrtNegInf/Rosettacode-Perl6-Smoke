#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Sorting_algorithms/Sleep_sort
#c# 2016-05-06 <RC
#m# MOAR: OK
#j#  JVM: OK
#n# flaps when .roll used
#n# 2018-08-03 JVM stopped working?

my @res;
await map -> $delay { start { sleep 0.5+$delay ; @res.push: $delay } },
    <4 3 1 3 2 4 5 2 1 0>;
    #(^5).roll(40); # fails

say @res.join(" "); # exit;

use Test;
is @res.join(" "), '0 1 1 2 2 3 3 4 4 5';
