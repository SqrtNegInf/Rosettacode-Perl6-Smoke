#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Character_codes
#c# 2019-11-07 <RC
#m# MOAR: OK
#j# JVM:  BROKEN

my @res;

for 'AΑА𪚥🇺🇸👨‍👩‍👧‍👦'.comb {
    @res.push: $_ for 
    ['Character:', 'Character name:', 'Ordinal(s):', 'Hex ordinal(s):', 'UTF-8:', 'Round trip:']».fmt('%15s')
    Z [$_, .uninames, .ords, .ords.fmt('0x%X'), .encode('UTF8')».base(16), .ords.chrs];
    @res.push: '';
}

.say for @res;

my $ref = q:to/END/;
