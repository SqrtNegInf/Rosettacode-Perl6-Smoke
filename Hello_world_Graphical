#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Hello_world/Graphical
#c# 2018-04-01 <RC
#t# graphical
#m# MOAR: BROKEN
#j# JVM:  BROKEN

# Works with: Rakudo version 2018.03
#Library: GTK

#`{{
#
use GTK::Simple;
use GTK::Simple::App;
 
my GTK::Simple::App $app .= new;
$app.border-width = 20;
$app.set-content( GTK::Simple::Label.new(text => "Goodbye, World!") );
$app.run;

}}
