#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Walk_a_directory/Recursively
#c# 2015-12-10 <RC, 2018-05-17 <RC
#m# MOAR: OK
#j#  JVM: OK

use File::Find;

my @res.push: $_ for find(dir => 'test').grep(/kansas/);
.say for @res;
#exit;

my $ref = qq:to/END/;
test/not-in-kansas.txt
test/dir1/not-in-kansas.txt
END

use Test;
is @res.join("\n"), chomp $ref;
